<% edit_name = project.to_s + ' - ' + leader.to_s.upcase  %>
<td class="<%= leader.to_s %> leader_cell" id="<%= leader %>_for_<%= project.id %>">
  <% l = project.send(leader) 
  	if l -%>
  		<%= link_to(l, '',:class => 'leader', 'data-id' => l.id) %>
  		<div class="buttons" style="display:none">
    		<%= link_to('Edit', '', :class => 'inline edit edit-leader', 'data-name' => edit_name, 'data-id' => project.id, 'data-leader' => leader) %>
    		<%= link_to('Delete', admin_leader_path(project, :leader => leader), :class => 'inline delete delete-leader', :remote => true, :method => :delete, :confirm => "Are you sure you want to remove #{l} as a director?") %>
    	</div>
  <% else %>
    <%= link_to('', :class => 'edit-leader', 'data-name' => edit_name, 'data-id' => project.id, 'data-leader' => leader) do %>
      <span class="fillit">(Fill this position)</span>
    <% end %>
  <% end -%>
</td>