  <div class="right sidebar">
  
   <div class="module applicantdata">
      <h3>Applicant Data</h3>
      <table>
        <tr>
          <td class="rightalign"></td>
          <td class="icon"><%= link_to(image_tag('icons/user.png'), 'mailto:') %></td>
          <td class="icon"><%= link_to(image_tag('icons/user-female.png'), '') %></td>
          <td class="total">Total</td>
        </tr>
        <tr>
          <td class="rightalign">Applicants</td>
          <td class="icon"><%= project.current_applicants_men.to_i %></td>
          <td class="icon"><%= project.current_applicants_women.to_i %></td>
          <td class="total"><%= project.current_applicants_men.to_i + project.current_applicants_women.to_i %></td>
        </tr>
        <tr>
          <td class="rightalign">Participants</td>
          <td class="icon"><%= project.current_students_men.to_i %></td>
          <td class="icon"><%= project.current_students_women.to_i %></td>
          <td class="total"><%= project.current_students_men.to_i + project.current_students_women.to_i %></td>
        </tr>
      </table>
    </div>
  
  
    <div class="module">
      <h3>Project Leaders</h3>
      <table>
        <% [:pd,:apd,:opd, :coordinator].each do |leader|
          person = project.send(leader) -%>
          <tr>
            <td class="rightalign"><%= leader.to_s.titleize %></td>
            <td class="name sidebar"><%= render 'leader', :project => project, :leader => leader %></td>
          </tr>
        <% end %>
      </table>
    </div>
    
    <% %w{staff volunteers kids}.each do |level| %>
      <div class="module <%= level %>">
        <h3><%= level.titleize %> <span class="controls"><a href="" class="add">Add</a></span></h3>
        <table class="stafflist">
          <% project.send(level.to_sym).each do |person| %>
            <%= render 'admin/project_staff/staff', :project => project, :person => person, :level => level.singularize %>
          <% end %>
        </table>
      </div>
    <% end %>
    
  
  </div>
  <%= render :partial => 'leader_form' %>