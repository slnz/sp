<div class="dashboardlist">
  <%= text_field_tag :filter %>
  <table>
    <tr>
      <th></th>
      <th class="th_project capitalize"><%= sort_by('Project') %></th>
      <th class="th_pd"><%= sort_by('PD') %></th>
      <th class="th_apd"><%= sort_by('APD') %></th>
      <th class="th_opd"><%= sort_by('OPD') %></th>
      <th></th>
      <th></th>
    </tr>
    <% @projects.each do |project| %>
    <tr>
      <td class="count">XX/XX</td>
      <td class="project"><%= link_to(project.name, admin_project_path(project)) %> <%= link_to('Edit', '', :class => 'inline edit') %></td>
      <td class="pd"><% if project.pd.blank? %><span class="fillit">(Fill this position)</span><% end %><%= link_to(project.pd, '') %><%= link_to('Edit', '', :class => 'inline edit') %><%= link_to('Delete', '', :class => 'inline delete') %></td>
      <td class="apd"><% if project.apd.blank? %><span class="fillit">(Fill this position)</span><% end %><%= link_to(project.apd, '') %><%= link_to('Edit', '', :class => 'inline edit') %><%= link_to('Delete', '', :class => 'inline delete') %></td>
      <td class="old"><% if project.opd.blank? %><span class="fillit">(Fill this position)</span><% end %><%= link_to(project.opd, '') %><%= link_to('Edit', '', :class => 'inline edit') %><%= link_to('Delete', '', :class => 'inline delete') %></td>
      <td class="stats"><%= link_to('Stats', '', :class => 'inline stats') %></td>
      <td class="close"><%= link_to('Close', '', :class => 'inline close') %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="dashboardfooter">
  <div class="pagination_wrapper">
    Pages: 
    <%= will_paginate %>
  </div>
  <div class="show_select">
    Show
    <%= select_tag :projects_per_page, options_for_select([[20, 20], [40, 40], [100, 100], ['All', 10000]], @per_page.to_i), :rel => admin_projects_path %>
    of 
    <%= @projects.count %>
  </div>
  <div class="clear"></div>
</div>
</div>