<div class="pagepad">
  <h2>Donations for <%= @application.person %> -- <%= number_to_currency(@application.account_balance.to_i, :precision => 0) %></h2>
  <table class="people">
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Donor Name</th>
      <th>Medium</th>
    </tr>
    <% @application.donations.each do |donation| %>
    <tr>
      <td><%= l(donation.donation_date) %></td>
      <td><%= number_to_currency(donation.amount) %></td>
      <td><%= donation.donor_name %></td>
      <td><%= donation.medium_type %></td>
    </tr>
    <% end %>
  </table>
</div>
