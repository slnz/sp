$("#leader_search").dialog('close');
<% if leader_types.include?params[:leader] %>
  $("#<%= params[:leader] %>_for_<%= @project.id %>").replaceWith('<%= escape_javascript(render('admin/projects/leader', :project => @project, :leader => params[:leader])) %>');
  $("#<%= params[:leader] %>_for_<%= @project.id %>").effect("highlight", {}, 2000);
<% else %>
  if ($('#<%= params[:leader] %>_<%= dom_id(@person) %>')[0] == null) {
    $('#<%= params[:leader] %>_list').append('<%= escape_javascript(render('admin/projects/staff', :person => @person, :level => params[:leader])) %>')
  }
<% end %>
$('#leader_search_results').html('');