<table class="people">
  <tr>
    <th class="gender"></th>
    <th class="name">Name</th>
    <th class="email"></th>
    <th>Projects</th>
    <th>Last Login</th>
		<th></th>
  </tr>
	<% users.each do |user|
				person = user.person %>
    <tr>
      <td class="gender"><%= image_tag("icons/user-#{person.human_gender.downcase}.png") if person.human_gender.present? %></td>
    	<td><a href="#" class="person" data-id="<%= person.id %>"><%= person %></a></td>
      <td><%= mail_to(person.email, image_tag('icons/mail.png')) if person.email.present? %></td>
      <td><%= person.staffed_projects.collect(&:name).uniq.join(', ') %></td>
      <td><%= l(user.last_login) if user.last_login.present? %></td>
			<td><%= link_to(image_tag('icons/slash.png'), admin_user_path(user), :method => :delete, :confirm => "Are you sure you want to remove #{person.to_s}'s access?") %></td>
    </tr>
	<% end %>
</table>
