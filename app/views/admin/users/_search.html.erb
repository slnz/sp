<%= form_tag admin_users_path, :id => 'create_user_form' do %>
  <%= hidden_field_tag :type, params[:type] %>
  <%= hidden_field_tag :person_id, '', :id => 'user_search_person_id' %>
  <ul>
    <% @people.each do |person| %>
      <li><a href='#' class="new_user" data-id="<%= person.id %>"><%= person %> (<%= person.user.try(:username) %>)</a></li>
    <% end %>
  </ul>
  <% if @total > @people.length %>
    <span style="font-size: 11px;">Showing <%= @people.length %> of <%= @total %> matches, keep typing...</span>
  <% end %>
  <%# if @people.length == 0 %>
    <%#= link_to('If the person you are looking for is not already in the system, click here to add them',
                new_admin_leader_path(params.slice(:leader, :name, :project_id)), :remote => true, :class => 'AddNewPerson') %>
  <%# end %>
<% end %>