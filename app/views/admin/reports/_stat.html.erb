<table>
  <tr><th>attribute</th><th>value</th></tr>
<%- if stat.StatisticID %>
    <%- Statistic.column_names.each do |c| %>
      <%- next if combined && %w(StatisticID periodBegin periodEnd Activity updated_at fk_Activity).include?(c) %>
      <%- if v = stat.send(c) %>
        <tr><td><%= c %></td><td><%= v %></td>
      <%- end %>
    <%- end %>
<%- else %>
  <tr><td colspan="2"><I>no stats have been entered for this project</I></td></tr>
<%- end %>
</table>
