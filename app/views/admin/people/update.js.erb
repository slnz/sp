<% if @person.errors.present? %>
  $('#leader_details<%= @person.id %>').dialog('option',{height:600 %>)
  $('#<%= dom_id(@person) %>_form').html('<%= raw escape_javascript(render('edit', :person => @person)) %>')
<% else %>
  $('#leader_details<%= @person.id %>').dialog('option',{height:300 %>)
  $('#leader_details<%= @person.id %>').html('<%= raw escape_javascript(render('person', :person => @person)) %>')
<% end %>
