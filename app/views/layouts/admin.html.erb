<!DOCTYPE html>
<html>
<head>
  <title>Sp2</title>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' ,
                             'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
  <%= javascript_include_tag 'rails', 'rails.extra', 'admin/projects', 'admin/admin', 'admin/users' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.2.custom', 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= embed_params %>
  <%= include_tiny_mce_if_needed %>
  <%#= tiny_mce_init %>
  

</head>
<body>
<div id="global">
  <div class="pagewidth">
    <ul id="menu">
      <% if sp_user %>
        <% if sp_user.can_see_dashboard? %>
          <li><%= link_to('Projects', admin_projects_path, :class => (params[:controller] == 'admin/projects' && !['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
        <% end %>
        <% if (!sp_user.can_see_dashboard? && current_person.directed_projects.length == 1) || (@project && !@project.new_record?) %>
          <li><%= link_to('People', (@project ? admin_project_path(@project) : admin_project_path(current_person.directed_projects.first)), :class => (params[:controller] == 'admin/projects' && ['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
        <% end %>
        <% if sp_user.can_add_user? %>
          <li><%= link_to('Users', admin_users_path, :class => (params[:controller] == 'admin/users') ? 'selected' : '') %></li>
        <% end %>
        <!-- <li><%= link_to('Reports', '') %></li> -->
        <!-- <li class="search withicon"><%= link_to('Search', 'Search') %></li> -->
      <% end %>
    </ul>
  </div>
</div>


<div id="primary">

  <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>

  <div class="pagewidth">
    <%= yield %>
  </div>
</div>

<div id="status" style="display: none;"><%= image_tag('questionnaire_engine/status.gif', :id => "status-img" ) %> <span id="status-msg">Please Wait...</span></div>
</body>
</html>
