<!DOCTYPE html>
<html>
<head>
  <title>Sp2</title>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' ,
                             'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
  <%= javascript_include_tag 'rails', 'rails.extra', 'admin/projects' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.2.custom', 'admin' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= embed_params %>
  <%= include_tiny_mce_if_needed %>
  <%#= tiny_mce_init %>
  

</head>
<body>
<div id="global">
  <div class="pagewidth">
    <ul id="menu">
      <% if sp_user.can_see_dashboard? %>
        <li><%= link_to('Projects', admin_projects_path, :class => (params[:controller] == 'admin/projects' && !['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
      <% end %>
      <% if current_person.directs_projects.length > 0 || @project %>
        <li><%= link_to('People', @project ? admin_project_path(@project) : admin_project_path(current_person.directs_projects.first), :class => (params[:controller] == 'admin/projects' && ['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
      <% end %>
      <!-- <li><%= link_to('Reports', '') %></li> -->
      <!-- <li class="search withicon"><%= link_to('Search', 'Search') %></li> -->
    </ul>
  </div>
</div>


<div id="primary">
  <div class="pagewidth">
    <%= yield %>
  </div>
</div>

</body>
</html>
