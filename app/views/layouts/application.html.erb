<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>Summer Project Application</title>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' ,
                             'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.2.custom' %>
  <%= questionnaire_engine_includes(:area => :public) %>
  <%= javascript_include_tag 'rails', 'rails.extra', 'application' %>
  <script type="text/javascript" charset="utf-8">
    var answer_sheet_type = '<%= @answer_sheet.class %>'
  </script>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'message_block', 'theme' %>
  <script type="text/javascript" charset="utf-8">
    <%= raw Rack::TimeZone::Javascript %>
    setTimezoneCookie()
  </script>
</head>
<body>

<div id="headwrap">
  <div id="header">
    <% if @authentications || logged_in? %>
    <div id="globalactions">
      <ul>
        <li><%= link_to("Log Out", "/logout") %></li>
        <li></li>
      </ul>
    </div>
    <% end %>
    <!-- anything in here my be custom branded -->
    <br/>
    <%= image_tag("/images/frontend/header.jpg") %>
    <!-- END -->
  </div>  
</div>

<div class="clear"></div>
  
<div id="wrapper">  
  <div id="main">
    <%= message_block :on => '' %>
    <%= yield %>
    <div class="clear"></div>
  </div>
</div>

<div id="footerwrap">
  <div id="footer">
    <!-- anything in here my be custom branded -->
    <table>
      <tr>
        <td class="left">Summer Project Application</td>
        <!-- <td class="right">Questionnaire Engine | Created by <a href="http://www.26am.com">26AM Design Studio</a></td> -->
      </tr>
    </table>
    <!-- END -->
  </div>
</div>

</body>
</html>
