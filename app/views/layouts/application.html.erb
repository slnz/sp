<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Summer Project Application</title>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag "application" %>

  <%= stylesheet_link_tag "application", :media => "all" %>
  <script type="text/javascript" charset="utf-8">
    var answer_sheet_type = '<%= @answer_sheet.class %>'
  </script>
  <%= csrf_meta_tag %>

  <script type="text/javascript" charset="utf-8">
    <%= raw Rack::TimeZone::Javascript %>
    setTimezoneCookie()
  </script>
</head>
<body id="<%= params[:controller]%>" class="<%= params[:action] %>">
<%= render :partial => 'layouts/ga' %>

<div id="headwrap">
  <div id="header">
    <% if @authentications || logged_in? %>
    <div id="globalactions">
      <ul>
        <li><%= link_to("Log Out", "/logout") %></li>
        <li></li>
      </ul>
    </div>
    <% end %>
    <!-- anything in here my be custom branded -->
    <br/>
    <a href="/"><%= image_tag("frontend/header.png") %></a>
    <!-- END -->
  </div>
</div>

<div class="clear"></div>

<div id="wrapper">
  <div class="row clearfix">
    <%= yield %>
  </div>
</div>
<div id="footerwrap">
  <div id="footer">
    <!-- anything in here my be custom branded -->
    <table>
      <tr>
        <td>
          <%= image_tag('icons/lifebuoy.png', style: 'vertical-align: top; margin-right: 5px;') %>
          Have any issues, or a question about something, please <a href="http://gosummerproject.com/contact/" class="issueslink" target="_blank">send us an email. (Link opens in a new window)
          <%= image_tag('icons/mail.png', style: 'vertical-align: top; border: 0px;') %>
          </a>
        </td>
        <td>
          <%= link_to('Privacy Policy', '/welcome/privacy') %>
        </td>
        <!-- <td class="right">Questionnaire Engine | Created by <a href="http://www.26am.com">26AM Design Studio</a></td> -->
      </tr>
    </table>
    <!-- END -->
  </div>
</div>
</body>
</html>
