<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>Dynamic Forms</title>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' ,
                             'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.2.custom' %>
  <%= questionnaire_engine_includes %>
  <%= javascript_include_tag 'rails', 'rails.extra' %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'spqe.admin.css' %>
</head>
<body>

<div id="status" style="display: none;"><div class="status_content"><%= image_tag('qe/status.gif', :id => "status-img" ) %> <span id="status-msg">Please Wait...</span></div></div>
<div id="global">
  <div class="pagewidth">
    <ul id="menu">
      <% if sp_user %>
        <% if sp_user.can_see_dashboard? %>
          <li><%= link_to('Projects', admin_projects_path, :class => (params[:controller] == 'admin/projects' && !['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
        <% end %>
        <% if (!sp_user.can_see_dashboard? && current_person.directed_projects.length == 1) || (@project && !@project.new_record?) %>
          <li><%= link_to('People', (@project ? admin_project_path(@project) : admin_project_path(current_person.directed_projects.first)), :class => (params[:controller] == 'admin/projects' && ['show','edit'].include?(params[:action])) ? 'selected' : '') %></li>
        <% end %>
        <% if sp_user.can_add_user? %>
          <li><%= link_to('Users', admin_users_path, :class => (params[:controller] == 'admin/users') ? 'selected' : '') %></li>
        <% end %>
        <!-- <li><%= link_to('Reports', '') %></li> -->
        <!-- <li class="search withicon"><%= link_to('Search', 'Search') %></li> -->
        <% if sp_user.can_edit_questionnaire? %>
         <li><%= link_to('Forms', admin_question_sheets_path, :class => (params[:controller] == 'admin/question_sheets') ? 'selected' : '') %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div id="wrapper">
   <div id="header">
      <ul id="nav-main">
        <li class="active"><%= link_to 'Forms', admin_question_sheets_path %></li>
        <div class="clear"></div>
      </ul>
   </div>
   
   <div id="main">
   <%= yield %>
   </div>
</div>

</body>
</html>
