<tr id="<%= dom_id(payment) %>" class="payment">
	<td width="25%"><%= payment.payment_type%></td>
	<td width="25%"><%= l payment.created_at %></td>
	<td width="25*"><%= payment.status == "Approved" ? number_to_currency(payment.amount) : payment.status %> <% if (payment.payment_type == 'Staff' && payment.status == 'Pending') -%>(Request sent)<% end -%></td>
	<td width="*" style="text-align: right;"><% if (payment.payment_type != "Credit Card" && payment.status != "Approved" && !@application.frozen?) %><%= link_to("Delete", application_payment_path(@application, payment), :method => :delete, :confirm => "Are you sure?", :remote => true, :class => "destroy")%><% end -%></td>
</tr>