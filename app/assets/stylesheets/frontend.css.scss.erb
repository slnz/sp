/* Variables */
$page-width: 1000px;
$global-font: Arial, Helvetica, Verdana;
$global-bg: #00626D;
$white: #fff;
$black: #000;
$clouds: #ecf0f1;
$text: #ecf0f1;
$light-green: #00b057;


body {margin: 0; padding: 0; font-size: 14px; font-family: $global-font; background: $global-bg; color: $text;}
a {text-decoration: none; outline: none; color: $light-green;}
img {border: none; vertical-align: middle;}
h3,h2 {margin: 0; padding: 10px 0 5px}

#outer {
    background: $white;
}

#header {
    width: $page-width;
}

#application-closed #body {
    border-top: 3px solid $black;
}

#body {
    background-color: $global-bg;
    width: $page-width;
    height: auto;
    border-top: 1px solid $black;
    padding-bottom: 100px;
}

.content {
    width: 85%;
    margin: 0 auto;
    margin-top: 100px;
    background: url("<%= asset_path('frontend/bg.png') %>") #fbf9ed;
    -moz-box-shadow: 0px 0px 3px #000;
    -webkit-box-shadow: 0px 0px 3px #000;
    box-shadow: 0px 0px 3px #000;
    padding: 20px 0;
    color: #333333;

    h3, p {
        padding-left: 20px;
        padding-right: 20px;
    }
}

.project-box {
    display: inline-block;
    width: 960px;
    padding: 20px;
    background-color: #fbf9ed;
    -moz-box-shadow: 0px 0px 3px #000;
    -webkit-box-shadow: 0px 0px 3px #000;
    box-shadow: 0px 0px 3px #000;
}

div#outer {
    width: $page-width;
    margin: 50px auto;
    background-color: $global-bg;
}


ul.contacts {
    margin: 0;
    padding: 0;
    list-style: none;

    li {
        margin: 10px 0 10px 30px;
        padding-left: 0px;
        text-indent: 30px;
    }

    li.mail {
        background: url("<%= asset_path('frontend/mail.png') %>") no-repeat 0 50%;
    }

    li.phone {
        background: url("<%= asset_path('frontend/phone.png') %>") no-repeat 0 50%;
    }

}

#application-closed #footer {
    width: 85%;
}

#footer {
    font-size: 11px;
    padding: 10px 0;
    color: #eeeeee;
    width: 100%;
    margin: 20px auto 0;
}


.ui-helper-hidden-accessible {display:none;}